unit flickr.lib.utils;

interface

uses
  System.Classes;

type
  TUtils = class(TObject)
    class function GetVersion() : string;
    class function StringListToString(const value : TStringList) : string;
  end;

implementation

uses
  System.Types, Windows, SysUtils;

{ TUtils }

class function TUtils.GetVersion: string;
var
  Exe: string;
  Size, Handle: DWORD;
  Buffer: TBytes;
  FixedPtr: PVSFixedFileInfo;
begin
  Exe := ParamStr(0);
  Size := GetFileVersionInfoSize(PChar(Exe), Handle);
  if Size = 0 then
    RaiseLastOSError;
  SetLength(Buffer, Size);
  if not GetFileVersionInfo(PChar(Exe), Handle, Size, Buffer) then
    RaiseLastOSError;
  if not VerQueryValue(Buffer, '\', Pointer(FixedPtr), Size) then
    RaiseLastOSError;
  Result := Format('%d.%d.%d.%d',
    [LongRec(FixedPtr.dwFileVersionMS).Hi,  //major
     LongRec(FixedPtr.dwFileVersionMS).Lo,  //minor
     LongRec(FixedPtr.dwFileVersionLS).Hi,  //release
     LongRec(FixedPtr.dwFileVersionLS).Lo]) //build
end;

class function TUtils.StringListToString(const value: TStringList): string;
var
  s : string;
  i: Integer;
begin
  s := '';
  for i := 0 to value.Count-1 do
  begin
    s := s + value[i];
  end;
  result := s.Trim;
end;

end.
